{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "cd ../.. && pnpm install --frozen-lockfile && pnpm --filter types build && pnpm --filter api build && pnpm --filter web build",
  "outputDirectory": "dist",
  "framework": "vite",
  "installCommand": "echo 'Using buildCommand for install'",
  "devCommand": "pnpm dev",
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api"
    }
  ],
  "functions": {
    "api/*.ts": {
      "runtime": "nodejs20.x",
      "memory": 512,
      "maxDuration": 10
    }
  },
  "env": {
    "NODE_ENV": "production"
  }
}
