{
  "name": "splitwise-pwa",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:web": "cd apps/web && pnpm dev",
    "dev:api": "cd apps/api && pnpm dev",
    "dev:all": "concurrently \"pnpm dev:api\" \"pnpm dev:web\"",
    "build": "pnpm --filter types build && pnpm --filter api build && pnpm --filter web build",
    "build:api": "pnpm --filter types build && pnpm --filter api build",
    "start:api": "cd apps/api && node dist/index.js",
    "test": "pnpm --recursive test",
    "typecheck": "pnpm --recursive typecheck",
    "lint": "pnpm --recursive lint"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3"
  }
}
